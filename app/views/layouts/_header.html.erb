<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <%= link_to "Art Swap", root_path, :class => "navbar-brand"%>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
        <li class="nav-item">
            <a class="nav-link" href="#">Link</a>
        </li>
    </ul>
    <ul class="navbar-nav ml-auto navbar-right">
        <% if !logged_in? %>
            <li class="nav-item"><%= link_to "Sign in", login_path, :class => "nav-link" %></li>
            <li class="nav-item"><%= link_to "Sign up", new_user_path, :class => "nav-link" %></li>
        <% else %>
            <li class="nav-item"><%= link_to current_user.first_name, user_path(current_user), :class => "nav-link"  %></li>
            <% if current_user.current_cart != nil %>
                <li class="nav-item"><%= link_to "Cart: $#{current_user.current_cart.total}", cart_path(current_user.current_cart), :class => "nav-link" %></li>
            <% else %>
                <li class="nav-item nav-link">Cart Empty</li>
            <% end %>
            <li class="nav-item"><%= link_to "Sign out", logout_path, method: :delete, :class => "nav-link"  %></li>
        <% end %>
        </ul>
    </ul>
  </div>
</nav>