<h2>Register a new user</h2>
<%= form_for @user do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %><br>
  <%= f.label :password %>
  <%= f.password_field :password %><br>
  <%= f.label "Re-enter password" %>
  <%= f.password_field :password_confirmation %><br>
  <%= f.submit "Create User" %>
<% end %>
